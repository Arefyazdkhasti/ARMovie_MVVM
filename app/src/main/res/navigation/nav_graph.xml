<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.armovie.ui.fragment.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/send_movie_id"
            app:destination="@id/movieDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.armovie.ui.fragment.MovieFragment"
        android:label="movie_fragment"
        tools:layout="@layout/movie_fragment" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.example.armovie.ui.fragment.SettingFragment"
        android:label="SettingFragment" />
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.armovie.ui.fragment.MovieDetailFragment"
        android:label="movie_detail_fragment"
        tools:layout="@layout/movie_detail_fragment" >

        <argument
            android:name="movieID"
            app:argType="integer" />
    </fragment>
</navigation>