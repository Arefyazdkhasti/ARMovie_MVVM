<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/season_poster"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_outline"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_margin="@dimen/standard_margin"
        android:layout_centerHorizontal="true"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Season 1"
        android:textSize="@dimen/standard_font"
        android:textColor="@color/black"
        android:layout_below="@id/season_poster"
        android:layout_marginStart="@dimen/standard_margin"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_overview"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:text="@string/overView"
        android:textSize="@dimen/standard_font"
        android:textColor="@color/gray500"
        android:layout_below="@id/textView_episode_count"
        android:layout_marginStart="@dimen/standard_margin"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_margin="@dimen/standard_margin"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView_episode_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/season_name"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:textColor="@color/black"
        android:textSize="@dimen/standard_font"
        android:text="@string/episode_count" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/season_episode_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:textColor="@color/gray500"
        android:textSize="@dimen/standard_font"
        tools:text="23"
        android:layout_toEndOf="@id/textView_episode_count"
        android:layout_below="@id/season_name"/>


</RelativeLayout>